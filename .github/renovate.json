{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "matchPackageNames": ["golang.org/x/net"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackageNames": ["golang.org/x/sys"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "rebaseWhen": "behind-base-branch"
}
